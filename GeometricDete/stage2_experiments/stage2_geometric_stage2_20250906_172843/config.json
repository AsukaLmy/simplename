{
  "data_path": "../dataset",
  "batch_size": 64,
  "num_workers": 2,
  "model_type": "geometric_stage2",
  "hidden_dims": [
    64,
    32,
    16
  ],
  "dropout": 0.2,
  "use_attention": true,
  "history_length": 5,
  "epochs": 40,
  "learning_rate": 0.001,
  "weight_decay": 0.0001,
  "optimizer": "adam",
  "scheduler": "step",
  "step_size": 30,
  "mpca_weight": 0.03,
  "acc_weight": 0.01,
  "max_grad_norm": 1.0,
  "early_stopping_patience": 15,
  "early_stopping_metric": "mpca",
  "log_interval": 10,
  "use_temporal": false,
  "use_scene_context": true,
  "use_hog_features": true
}